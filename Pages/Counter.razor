@page "/counter"

<h1>Counter</h1>

<!--zeigt die aktuelle Anzahl an-->
<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;

    [Parameter]
    public int Wert { get; set; } = 1;

    //erhöht die Anzahl um den eingegeben Parameter
    private void IncrementCount()
    {
        currentCount+=Wert;
    }
}
