@page
@model CoronaWarn.Pages.Locations.EditModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, CoronaWarn

@{
    ViewData["Title"] = "Edit";
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-grid.css" />
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-reboot.css" />
<link rel="stylesheet" href="~/css/site.css" />
<link rel="stylesheet" href="~/css/bootstrap/bootstrap.min.css" />

<h1>Edit</h1>

<h4>Location</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Location.Id" />
            <div class="form-group">
                <label asp-for="Location.Bezeichnung" class="control-label"></label>
                <input asp-for="Location.Bezeichnung" class="form-control" />
                <span asp-validation-for="Location.Bezeichnung" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location.Email" class="control-label"></label>
                <input asp-for="Location.Email" class="form-control" />
                <span asp-validation-for="Location.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
